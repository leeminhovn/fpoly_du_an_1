<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoveStoriesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/wrapLoveStoriesFragment_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/wrapLoveStoriesFragment_login_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Vui lòng đăng nhập để sử dụng tính năng này"
            android:textSize="20dp"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrapLoveStoriesFragment_login_mean"
            android:layout_marginTop="20dp"
            android:id="@+id/wrapLoveStoriesFragment_login_mean_btn"

            android:foregroundGravity="center"
            android:layout_centerHorizontal="true"
            android:text="Đăng nhập ngay">

        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleFragmentLove"

            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Truyện đang theo dõi" />
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"

            android:layout_below="@+id/titleFragmentLove"
            android:id="@+id/listItemLove"
            android:paddingBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</FrameLayout>